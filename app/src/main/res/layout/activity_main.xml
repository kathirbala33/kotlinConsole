<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<TextView
    android:id="@+id/fragmentAdapter"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="FragmentAdapter"
    android:textColor="@color/white"
    android:gravity="center"
    android:background="@color/design_default_color_primary"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/alertNotification"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="AlertNotification"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toBottomOf="@+id/fragmentAdapter"/>
    <TextView
        android:id="@+id/basic"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Basic"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toBottomOf="@+id/alertNotification"/>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>